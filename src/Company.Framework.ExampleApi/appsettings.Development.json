{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Db": {
    "Instances": [
      {
        "Type": "Mongo",
        "Name": "task-management-instance",
        "Provider": {
          "Connection": {
            "String": "mongodb://localhost:27017"
          },
          "Contexts": [
            {
              "Key": "task-management-context",
              "DbName": "task-management"
            }
          ]
        }
      }
    ]
  },
  "HttpClients": {
    "Action": {
      "BaseUrl": "http://localhost:5167/action",
      "Timeout": 5
    }
  },
  "Messaging": {
    "Kafka": {
      "Buses": {
        "ActionKafka-1": {
          "Nodes": "localhost:9092",
          "Producers": {
            "PingApplied": {
              "Topic": "ping-applied"
            }
          },
          "Consumers": {
            "PingApplied": {
              "Topic": "ping-applied",
              "GroupId": "action",
              "Retry": {
                "Topic": {
                  "Replication": 1,
                  "Partition": 1
                },
                "Count": 1,
                "Delay": {
                  "Type": "Exponential",
                  "Interval": "00:00:05"
                }
              }
            }
          }
        },
        "ActionKafka-2": {
          "Nodes": "localhost:9092",
          "Producers": {
            "PingApplied": {
              "Topic": "ping-applied"
            }
          },
          "Consumers": {
            "PingApplied": {
              "Topic": "ping-applied",
              "GroupId": "action",
              "Retry": {
                "Topic": {
                  "Replication": 1,
                  "Partition": 1
                },
                "Count": 3,
                "Delay": {
                  "Type": "Exponential",
                  "Interval": "00:00:05"
                }
              }
            }
          }
        }
      },
      "Defaults": {
        "ConsumerGroupId": "example-api"
      }
    },
    "Rabbit": {
      "Buses": {
        "ActionRabbit-1": {
          "Consumers": {
            "PingApplied": {
              "Declaration": {
                "Exchange": {
                  "Type": "topic",
                  "Name": "action"
                },
                "Routing": "ping-applied",
                "Queue": "action-ping-applied"
              },
              "Retry": {
                "Count": 1,
                "Delay": {
                  "Type": "Exponential",
                  "Interval": "00:00:05"
                }
              }
            }
          }
        },
        "ActionRabbit-2": {
          "Connection": {
            "Port": 49153
          },
          "Consumers": {
            "PingApplied": {
              "Declaration": {
                "Exchange": {
                  "Type": "topic",
                  "Name": "action"
                },
                "Routing": "ping-applied",
                "Queue": "action-ping-applied"
              },
              "Retry": {
                "Count": 1,
                "Delay": {
                  "Type": "Exponential",
                  "Interval": "00:00:05"
                }
              }
            }
          }
        }
      }
    },
    "Sqs": {
      "Buses": {
        "ActionSqs-1": {
          "Consumers": {
            "PingApplied": {
              "Queue": "action-ping-applied",
              "Concurrency": 1,
              "Retry": {
                "Count": 1,
                "Delay": {
                  "Type": "Exponential",
                  "Interval": "00:00:05"
                }
              }
            }
          }
        }
      }
    }
  }
}
