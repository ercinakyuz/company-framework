{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Db": {
    "Instances": [
      {
        "Type": "Mongo",
        "Name": "task-management-instance",
        "Provider": {
          "Connection": {
            "String": "mongodb://localhost:27017"
          },
          "Contexts": [
            {
              "Key": "task-management-context",
              "DbName": "task-management"
            }
          ]
        }
      }
    ]
  },
  "HttpClients": {
    "Action": {
      "BaseUrl": "http://localhost:5167/action",
      "Timeout": 5
    }
  },
  "Messaging": {
    "Kafka": {
      "Buses": {
        "ActionKafka-1": {
          "Nodes": "localhost:9092",
          "Producers": {
            "PingApplied": {
              "Topic": "ping-applied"
            }
          },
          "Consumers": {
            "MultiplePingApplied": {
              "Topic": "ping-applied",
              "GroupId": "Multiple-1",
              "Retry": {
                "Count": 1,
                "Delay": {
                  "Type": "Exponential",
                  "Interval": "00:00:05"
                }
              }
            },
            "SingularPingApplied": {
              "Topic": "ping-applied",
              "GroupId": "Singular",
              "Retry": {
                "Count": 1,
                "Delay": {
                  "Type": "Exponential",
                  "Interval": "00:00:05"
                }
              }
            }
          }
        },
        "ActionKafka-2": {
          "Nodes": "localhost:9092",
          "Producers": {
            "PingApplied": {
              "Topic": "ping-applied"
            }
          },
          "Consumers": {
            "MultiplePingApplied": {
              "Topic": "ping-applied",
              "GroupId": "Multiple-2",
              "Retry": {
                "Count": 3,
                "Delay": {
                  "Type": "Exponential",
                  "Interval": "00:00:05"
                }
              }
            },
            "SingularPingApplied": {
              "Topic": "ping-applied",
              "GroupId": "Singular",
              "Retry": {
                "Count": 3,
                "Delay": {
                  "Type": "Exponential",
                  "Interval": "00:00:05"
                }
              }
            }
          }
        }
      },
      "Defaults": {
        "ConsumerGroupId": "example-api"
      }
    },
    "Rabbit": {
      "Buses": {
        "ActionRabbit-1": {
          "Host": "localhost",
          "Consumers": {
            "MultiplePingApplied": {
              "Exchange": {
                "Type": "topic",
                "Name": "action"
              },
              "Routing": "ping-applied",
              "Queue": "action-ping-applied-multiple-1"
            },
            "SingularPingApplied": {
              "Exchange": {
                "Type": "topic",
                "Name": "action"
              },
              "Routing": "ping-applied",
              "Queue": "action-ping-applied-singular"
            }
          }
        },
        "ActionRabbit-2": {
          "Host": "localhost",
          "Consumers": {
            "MultiplePingApplied": {
              "Exchange": {
                "Type": "topic",
                "Name": "action"
              },
              "Routing": "ping-applied",
              "Queue": "action-ping-applied-multiple-2"
            },
            "SingularPingApplied": {
              "Exchange": {
                "Type": "topic",
                "Name": "action"
              },
              "Routing": "ping-applied",
              "Queue": "action-ping-applied-singular"
            }
          }
        }
      } 
    }
  }
}
